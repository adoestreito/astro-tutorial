---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
console.log(frontmatter.image.url);
---

<BaseLayout pageTitle={frontmatter.title}>
    <div class="header">
        <p><img src={frontmatter.image.url} alt="" class="responsive-img" /></p>
        <p>Written by {frontmatter.author}</p>
        <p>Published on: {frontmatter.pubDate}</p>
        <p>TLDR: {frontmatter.description}</p>
        {
            (
                <div class="tags">
                    {frontmatter.tags.map((tag: string) => (
                        <p class="tag">
                            <a href={`/tags/${tag}`}>{tag}</a>
                        </p>
                    ))}
                </div>
            )
        }
    </div>

    <slot />
</BaseLayout>

<style>
    .header {
        border: solid #a1a1a1;
        border-radius: 5%;
        padding: 3%;
    }
    .responsive-img {
        max-width: 100%;
    }
    a {
        color: #00539f;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
    }
</style>
